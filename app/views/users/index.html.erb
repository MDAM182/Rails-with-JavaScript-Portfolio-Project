<h1 align="center">All Members</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="workout-title">
            <%= link_to user.username, user_workouts_path(user) %>
          </li>
          <li><small><%= pluralize(user.workouts.count, "workout") if user.workouts %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete this user", user_workouts_path(user), method: :delete, data: {confirm: "Are you sure?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
