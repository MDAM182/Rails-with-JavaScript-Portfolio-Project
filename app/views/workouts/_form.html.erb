<%= render 'shared/errors', obj: @workout %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@workout, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of workout", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of workout" %>
          </div>
        </div>

        <!-- Level Selection -->

        <div class="control-label col-sm-2">
          <%= f.label :level %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
              <%= f.select :level,['Beginner','Intermediate','Advanced','Expert'], include_blank: "Select" %>

            </div>
          </div>
        </div>

      <div class="control-label col-sm-2">
        <%= f.label :categories %>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: "Select" %>

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to workouts listing", workouts_path %> ]
    </div>

  </div>
</div>
